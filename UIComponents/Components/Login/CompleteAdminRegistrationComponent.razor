@using Components.SharedComponents
<head>
    <link rel="stylesheet" href="/_content/Components/LoginPage/LoginPage.css"/>
    <style>
        .LoginContainer{
        justify-content: center;
        align-items: center;
        background: linear-gradient(to bottom,rgba(10,199,121,0.87),rgb(125,21,210));
        }
    </style>
</head>
<div class="LoginContainer">
    @if (isDialogShown)
    {
        <LoadingComponent navigateButton="true" isLoading="isLoading" navigateTo="navigateToLogin"></LoadingComponent>
    }
    
    <div class="LoginPage_content">
        <div class="LoginFieldsContainer">
            <input id="LoginPasswordField" type="password" placeholder="كلمة المرور" @bind="firstPassword"/>
            <svg class="loginIcons showPassword" id="showPassword" width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.60997 9.60714C8.05503 10.4549 7 12.1043 7 14C7 16.7614 9.23858 19 12 19C13.8966 19 15.5466 17.944 16.3941 16.3878M21 14C21 9.02944 16.9706 5 12 5C11.5582 5 11.1238 5.03184 10.699 5.09334M3 14C3 11.0069 4.46104 8.35513 6.70883 6.71886M3 3L21 21" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>

        <div class="LoginFieldsContainer">
            <input type="password" placeholder="تأكيد كلمة المرور" @bind="secondPassword"/>
        </div>
        <button @onclick="confirmRegistration">تأكيد</button>
        <div class="LoginErrors">
            <label class="error">@error</label>
        </div>
    </div>
</div>
<script src="/_content/Components/JS/LoginPage.js"></script>
